{
  "name": "@abhi-arya1/wt",
  "version": "0.0.7",
  "description": "Git worktree sandboxes, locally or on remote hosts over SSH.",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "wt": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
